<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="apps.yuzaco.com.bugbuster" >
    <application android:name="apps.yuzaco.com.bugbuster.MozartApp"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/Theme.zen"
        android:localeConfig="@xml/locales_config">
        <activity
            android:name="apps.yuzaco.com.bugbuster.SplashActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="apps.yuzaco.com.bugbuster.Screen"
                  android:screenOrientation="portrait"
                  android:exported="true"
                  android:theme="@style/Theme.zen"
                  android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="apps.yuzaco.com.bffmozart.Screen"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="apps.yuzaco.com.bugbuster.FirstScene"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                  android:theme="@style/Theme.zen"
                  android:exported="true"
                  android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="apps.yuzaco.com.bffmozart.FirstScene"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest>
