<resources>

    <style name="Theme.zen" parent="Base.Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/ZenAqua</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:logo">@android:color/transparent</item>
    </style>

    <style name="MyActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/ZenBlack</item>
        <item name="android:titleTextStyle">@style/ActionBarText</item>
    </style>
    <style name="ActionBarText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title"> <!-- getting here error-->
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/ZenWhite</item>
        <item name="android:text">@string/header</item>
    </style>
    <style name="SplashTheme" parent="Base.Theme.AppCompat.Light">
        <item name="android:windowBackground">@drawable/flashscreen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
    </style>
    <style name="InstructTheme" parent="Base.Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
    </style>
</resources>